# ProfileCrafted.com Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3001
HOST=localhost
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Backend API URL (for frontend)
NEXT_PUBLIC_API_URL=http://localhost:3001

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP Settings for email delivery
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# From email address
FROM_EMAIL=noreply@profilecrafted.com

# Enable/disable email functionality
ENABLE_EMAIL=false

# ===========================================
# AI/ML SERVICE CONFIGURATION
# ===========================================
# Replace with your actual AI service credentials

# OpenAI API (for resume analysis and essay generation)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Alternative: Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Alternative: Google Gemini
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ===========================================
# FILE STORAGE CONFIGURATION
# ===========================================
# Local storage (default)
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Optional: AWS S3 for file storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=profilecrafted-uploads

# Optional: Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=profilecrafted-uploads

# ===========================================
# DATABASE CONFIGURATION (Optional)
# ===========================================
# MongoDB (for user sessions and analytics)
MONGODB_URI=mongodb://localhost:27017/profilecrafted

# PostgreSQL (alternative)
DATABASE_URL=postgresql://username:password@localhost:5432/profilecrafted

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn-here

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret (if implementing user authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# Session Secret
SESSION_SECRET=your-session-secret-here

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable specific features
ENABLE_EMAIL=false
ENABLE_ANALYTICS=false
ENABLE_ERROR_TRACKING=false
ENABLE_USER_ACCOUNTS=false

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug logging
DEBUG=true

# Mock API delays (for development)
MOCK_API_DELAY=true

# Skip file validation (for testing)
SKIP_FILE_VALIDATION=false

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Domain and SSL
DOMAIN=profilecrafted.com
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key

# CDN Configuration
CDN_URL=https://cdn.profilecrafted.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
# Stripe (for premium features)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret

# SendGrid (alternative email service)
SENDGRID_API_KEY=your-sendgrid-api-key

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# ===========================================
# RESUME PARSING SERVICES
# ===========================================
# Resume parsing API (if using third-party service)
RESUME_PARSER_API_KEY=your-resume-parser-api-key
RESUME_PARSER_ENDPOINT=https://api.resumeparser.com

# Document conversion service
DOCUMENT_CONVERTER_API_KEY=your-converter-api-key

# ===========================================
# SOCIAL MEDIA CONFIGURATION
# ===========================================
# Social media app credentials (for advanced sharing)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
