# ProfileCrafted.com Production Environment Configuration
# Copy this to .env and fill in your actual credentials

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
FRONTEND_URL=https://your-domain.com
MAX_REQUEST_SIZE=10mb
TRUST_PROXY=true

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here
SESSION_SECRET=your-session-secret-here
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# AI SERVICES (Choose one or multiple)
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
DEFAULT_AI_PROVIDER=openai
AI_TIMEOUT=30000
AI_MAX_RETRIES=3

# Anthropic Configuration (Alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI Configuration (Alternative)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# =============================================================================
# EMAIL SERVICE
# =============================================================================
ENABLE_EMAIL=true

# Gmail SMTP (Recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
FROM_EMAIL=noreply@profilecrafted.com
REPLY_TO_EMAIL=support@profilecrafted.com

# Alternative: SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# Alternative: AWS SES
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=your-aws-ses-smtp-username
# SMTP_PASS=your-aws-ses-smtp-password

# =============================================================================
# FILE STORAGE
# =============================================================================
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=profilecrafted-uploads

# =============================================================================
# DATABASE (Optional)
# =============================================================================
ENABLE_DATABASE=false
MONGODB_URI=mongodb://localhost:27017/profilecrafted
DB_MAX_POOL_SIZE=10
DB_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry Error Monitoring
SENTRY_DSN=https://your-sentry-dsn-here

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_METRICS=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_SOCIAL_SHARING=true
MAINTENANCE_MODE=false

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# DEVELOPMENT OVERRIDES (Remove in production)
# =============================================================================
# Uncomment for development
# NODE_ENV=development
# LOG_LEVEL=debug
# TRUST_PROXY=false
